{
  "manifest_version": 3,
  "name": "JobTrackr",
  "version": "1.0",
  "description": "Capture job URLs and track your job applications",
  "permissions": [
    "activeTab",
    "tabs",
    "notifications",
    "storage",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "JobTrackr - Capture Job URL"
  },
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "capture-job-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Capture current job URL"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
